#include <iostream>
using namespace std;
#define MAX 100
int a[MAX];
int n;
void NhapDs()
{
	cout << "Nhap n : ";
	cin >> n;
	do {
		if (n < 1 || n > 100)
			cout << "Nhap sai . Moi nhap lai : ";
		for (int i = 0; i < n; i++)
		{
			cout << "a[" << i << "]";
			cin >> a[i];
		}
	} while (n < 1 || n > 100);
}
int xuatDs()
{
	if (n < 1 || n > 100)
		return 0;
	for (int i = 0; i < n; i++)
	{
		cout << a[i] << endl;
	}
}
void InsertionSort(int a[], int n)
{
	int x, i, j;
	for (i = 1; i < n; i++)
	{
		x = a[i];
		j = i - 1;
		while (0 <= j && x < a[j])
		{
			a[j + 1] = a[j];
			j--;
		}
		a[j + 1] = x;
	}
}
void SelectionSort(int a[], int n)
{
	int min_pos, i, j;
	for (i = 0; i < n - 1; i++)
	{
		min_pos = i;
		for (j = i + 1; j < n; j++)
			if (a[j] < a[min_pos])
				min_pos = j;
		swap(a[min_pos], a[i]);
	}
}
void InterchangeSort(int a[], int n)
{
	for (int i = 0; i < n - 1; i++)
		for (int j = i + 1; j < n; j++)
			if (a[i] > a[j])
				swap(a[i], a[j]);
}
void BubbleSort(int a[], int n)
{
	for (int i = 0; i < n - 1; i++)
		for (int j = n - 1; j > i; j--)
			if (a[j - 1] > a[j])
				swap(a[j], a[j - 1]);
}
int main()
{
	NhapDs();
	cout << "-----Danh sach vua nhap----- \n";
	cout << endl;
	xuatDs();
	cout << "Sap xep tang dan bang thuat toan InsertionSort.\n";
	InsertionSort(a, n);
	cout << endl;
	xuatDs();
	cout << "Sap xep tang dan bang thuat toan SelectionSort.\n";
	SelectionSort(a, n);
	cout << endl;
	xuatDs();
	cout << "Sap xep tang dan bang thuat toan InterchangeSort.\n";
	InterchangeSort(a, n);
	cout << endl;
	xuatDs();
	cout << "Sap xep tang dan bang thuat toan BubbleSort.\n";
	BubbleSort(a, n);
	cout << endl;
	xuatDs();
	return 0;
}
